@model Gruppenverteilung.Models.AdministrationModel
@using Gruppenverteilung.Code;

<form>
    <div class="row">
        <div class="form-group col-lg-6">
            <select id="CurrentSelectedGroup" class="col form-control">
                @for (int i = 0; i < Model.groups.Count; i++)
                {
                    <option value="@Model.groups[i].Name"> @Model.groups[i].Name </option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group col-lg-12">
                            <label for="groupname"> Gruppenname: </label>
                            <input name="groupname" type="text" class="form-control" placeholder="Gruppenname" value="@GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.Name"/>
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="col-lg-12">
                                <!--_VIEW-->
                                <ul class="list-group">
                                    @if (GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.TutorList.Count == 0)
                                    {
                                        <li class="list-group-item">Keine Tutoren Zugewiesen </li>
                                    }
                                    else
                                    {
                                        for (int i = 0; i < GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.TutorList.Count; i++)
                                        {
                                            <li class="list-group-item">@GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.TutorList[i].Name <a id="RemoveTutorButton" onclick="RemoveTutor('@GlobalVariables.CurrentSelectedGroupInTutorAssignView.TutorList[i].Name')" class="btn btn-danger"><i class="fas fa-trash"></i></a></li>
                                        }
                                    }
                                </ul>
                                <!--/_VIEW-->
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group col-lg-12">
                            <label for="grouproom"> Raum: </label>
                            <input name="grouproom" type="text" class="form-control" placeholder="Raum" value="@GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.Room" />
                        </div>
                        <div class="col-lg-12">
                            <ul class="list-group">
                                @if (GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.MemberList.Count == 0)
                                {
                                    <li class="list-group-item">Keine Erstis eingetragen</li>
                                }
                                else
                                {
                                    for (int i = 0; i < GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.MemberList.Count; i++)
                                    {
                                        <li class="list-group-item">@GlobalVariables.CurrentSelectedGroupInEditGroupViewAssignView.MemberList[i].Name <a id="RemoveMemberButton" onclick="RemoveMember('@GlobalVariables.CurrentSelectedGroupInTutorAssignView.MemberList[i].Name')" class="btn btn-danger"><i class="fas fa-trash"></i></a></li>
                                    }
                                }

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group col-lg-12">
                            <div class="col-lg-12">
                                <input type="file" class="form-control" placeholder="Raum" />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <img class="img-thumbnail" src="https://www.zps-smile.de/wp-content/uploads/2016/10/orionthemes-placeholder-image.png" width="100%" />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <button formaction="SerializeGroup" type="button" class="btn btn-success">Änderungen Speichern</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    //Change Tutorlist (as partial view) by changing the Group
    $("#CurrentSelectedGroup").change(function (event) {
        //alert($(this).val());
        var url = "/Administration/TutorUpdate";
        $.post(url, { groupename: $(this).val() }, function (res) {
            $("#AssignedTutor_ListItems").html(res);
        });
    });
</script>