@model Gruppenverteilung.Models.DataInputModel
@using Gruppenverteilung.Code;
@{
    ViewData["Title"] = "DataInputView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DataInputView</h2>
<div class="row">

<form asp-controller="Home" asp-action="SubmitData" method="post" class="col-lg-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Name"> Name </label>
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Alter"> Alter </label>
                <input asp-for="Alter" class="form-control" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Geschlecht">Geschlecht</label>
                <select asp-for="Geschlecht" asp-items="Html.GetEnumSelectList<Geschlecht>()" class="form-control"></select>
            </div>
         </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Studiengang">Studiengang</label>
                <select asp-for="Studiengang" asp-items="Html.GetEnumSelectList<Studiengang>()" class="form-control"></select>
            </div>
         </div>
        <div class="col-lg-12">
            <div class="form-group">
                <input class="btn btn-primary" type="submit" formaction="SubmitData" value="Anmelden" />
            </div>
        </div>
    </div>
</form>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
